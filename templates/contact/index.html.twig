{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url({{ asset('build/header_contact.png') }});" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-3 bread">Contact</h1>
                    <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('home') }}">Accueil</a></span> <span>Contact</span></p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section contact-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="row d-flex justify-content-center mt-5">
                <div class="col-md-6 ftco-animate py-md-5">
                    <form id="contactForm" action="" class="contact-form" method="post">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form._token) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_row(form.name) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_row(form.email) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_row(form.subject) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.message) }}
                            </div>
                            {{ form_row(form.captcha) }}
                            <div class="form-group">
                                <input type="submit" value="Envoyer" class="btn btn-primary py-3 px-5" formnovalidate>
                            </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
