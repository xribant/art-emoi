{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addEmailNotificationForm" action="" method="post">
    <div class="card-content">
        <div class="form-group">
            <label class="control-label">
                Titre <star>*</star>
            </label>
            {{ form_row(form.title) }}
        </div>
        <div class="form-group">
            <label class="control-label">
                E-Mail destinataire <star>*</star>
            </label>
            {{ form_row(form.recipient) }}
        </div>
        <div class="form-group">
            <label class="control-label">
                Texte<star>*</star>
            </label>
            {{ form_row(form.message) }}
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('email_notification_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
