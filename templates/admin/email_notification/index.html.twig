{% extends 'admin/admin_base.html.twig' %}

{% block title %}Emails de notification{% endblock %}

{% block pageTitle %}Emails de notification{% endblock %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="toolbar">
                                <!--Here you can write extra buttons/actions for the toolbar-->
                                <a class="btn btn-primary btn-fill btn-wd" href="{{ path('email_notification_new') }}">Créer une nouvelle notification</a>
                            </div>
                            <table id="emailNotification-table" class="table">
                                <thead>
                                <th>#</th>
                                <th>Titre</th>
                                <th>Destinataire</th>
                                <th>Création</th>
                                <th>Modifié le</th>
                                <th>Actions</th>
                                </thead>
                                <tbody>
                                {% for notif in notifications %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ notif.title }}</td>
                                        <td>{{ notif.recipient }}</td>
                                        <td>{{ notif.createdAt ? notif.createdAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                        <td>{{ notif.upatedAt ? notif.upatedAt|format_datetime('medium', 'medium',locale='fr') }}</td>
                                        <td>
                                            <div>
                                                <a rel="tooltip" title="Modifier" class="btn btn-simple btn-warning btn-icon" href="{{ path('email_notification_edit', {'slug': notif.slug}) }}">
                                                    <i class="ti-pencil-alt"></i>
                                                </a>
                                                <form style="display: inline-block;" method="post" action="{{ path('email_notification_delete', {'slug': notif.slug}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cette notification?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notif.slug) }}">
                                                    <button rel="tooltip" title="Supprimer" class="btn btn-simple btn-danger btn-icon"><i class="ti-close"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Pas de notifications...</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div><!--  end card  -->
                </div> <!-- end col-md-12 -->
            </div> <!-- end row -->
        </div>
    </div>
{% endblock %}
