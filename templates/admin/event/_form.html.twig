{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addEventForm" action="" method="post">
    <div class="card-content">
        <div class="form-group {% if form_errors(form.startDate) %}has-error{% endif %}">
            <label class="control-label">
                Début<star>*</star>
            </label>
            {{ form_row(form.startDate) }}
        </div>
        <div class="form-group {% if form_errors(form.endDate) %}has-error{% endif %}">
            <label class="control-label">
                Fin<star>*</star>
            </label>
            {{ form_row(form.endDate) }}
        </div>
        <div class="form-group {% if form_errors(form.duration) %}has-error{% endif %}">
            <label class="control-label">
                Durée
            </label>
            {{ form_row(form.duration) }}
        </div>
        <div class="form-group {% if form_errors(form.workshop) %}has-error{% endif %}">
            <label class="control-label">
                Formation<star>*</star>
            </label>
            {{ form_row(form.workshop) }}
        </div>
        <div class="form-group {% if form_errors(form.location) %}has-error{% endif %}">
            <label class="control-label">
                Lieu<star>*</star>
            </label>
            {{ form_row(form.location) }}
        </div>
        <div class="form-group {% if form_errors(form.presentiel) %}has-error{% endif %}">
            <label class="control-label">
                Présentiel?<star>*</star>
            </label>
            <div class="checkbox">
                {{ form_row(form.presentiel) }}
            </div>
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('event_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
