{% extends 'admin/admin_base.html.twig' %}

{% block title %}Gestion des localisations{% endblock %}

{% block pageTitle %}Localisation des ateliers (Présentiel, Zoom, etc...){% endblock %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="toolbar">
                                <!--Here you can write extra buttons/actions for the toolbar-->
                                <a class="btn btn-primary btn-fill btn-wd" href="{{ path('workshop_location_new') }}">Créer une localisation</a>
                            </div>

                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Ville</th>
                                    <th>Pays</th>
                                    <th>Créé le</th>
                                    <th>Modifié le</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for location in workshop_locations %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ location.name }}</td>
                                        <td>{{ location.city }}</td>
                                        <td>{{ location.country }}</td>
                                        <td>{{ location.createdAt ? location.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ location.updatedAt ? location.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>
                                            <div>
                                                <a rel="tooltip" title="Modifier" class="btn btn-simple btn-warning btn-icon" href="{{ path('workshop_location_edit', {'id': location.id}) }}">
                                                    <i class="ti-pencil-alt"></i>
                                                </a>
                                                <form style="display: inline-block;" method="post" action="{{ path('workshop_location_delete', {'id': location.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet endroit?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                                    <button rel="tooltip" title="Supprimer" class="btn btn-simple btn-danger btn-icon"><i class="ti-close"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">Pas de localisation</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div><!--  end card  -->
                </div> <!-- end col-md-12 -->
            </div> <!-- end row -->
        </div>
    </div>
{% endblock %}
