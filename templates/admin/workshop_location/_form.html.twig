{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addLocalisationForm" action="" method="post">
    <div class="card-content">
        <div class="form-group {% if form_errors(form.name) %}has-error{% endif %}">
            <label class="control-label">
                Nom <star>*</star>
            </label>
            {{ form_row(form.name) }}
        </div>
        <div class="form-group {% if form_errors(form.city) %}has-error{% endif %}">
            <label class="control-label">
                Ville
            </label>
            {{ form_row(form.city) }}
        </div>
        <div class="form-group {% if form_errors(form.country) %}has-error{% endif %}">
            <label class="control-label">
                Pays
            </label>
            {{ form_row(form.country) }}
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('workshop_location_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
