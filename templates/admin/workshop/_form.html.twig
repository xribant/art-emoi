{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addWorkshopForm" action="" method="post">
    <div class="card-content">
        <div class="form-group">
            <label class="control-label">
                Titre <star>*</star>
            </label>
            {{ form_row(form.title) }}
        </div>
        <div class="form-group">
            <label class="control-label">
                Description<star>*</star>
            </label>
            {{ form_row(form.description) }}
        </div>
        <div class="form-group">
            <label class="control-label">
                Lieu<star>*</star>
            </label>
            <div class="input-group">
                <span class="input-group-addon"><i class="ti-location-pin"></i></span>
                {{ form_row(form.location) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">
                Prix HTVA
            </label>
            <div class="input-group">
                <span class="input-group-addon">€</span>
                {{ form_row(form.price) }}
            </div>
            <label class="control-label">
                Aussi à distance:
            </label>
            <div class="input-group">
                {{ form_row(form.remote) }}
            </div>
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('workshop_index') }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
