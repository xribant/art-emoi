{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
 {{ form_row(form._token) }}
<form id="addWorshopInfoForm" action="" method="post">
    <div class="card-content">
        <div class="form-group {% if form_errors(form.location) %}has-error{% endif %}">
            <label class="control-label">
                Lieu <star>*</star>
            </label>
            <div class="checkbox">
                {{ form_row(form.location) }}
            </div>
        </div>
        <div class="form-group {% if form_errors(form.duration) %}has-error{% endif %}">
            <label class="control-label">
                Durée<star>*</star>
            </label>
            {{ form_row(form.duration) }}
        </div>
        <div class="form-group {% if form_errors(form.start_at) %}has-error{% endif %}">
            <label class="control-label">
                Début<star>*</star>
            </label>
            {{ form_row(form.start_at) }}
        </div>
        <div class="form-group {% if form_errors(form.stop_at) %}has-error{% endif %}">
            <label class="control-label">
                Fin<star>*</star>
            </label>
            {{ form_row(form.stop_at) }}
        </div>
        <div class="form-group {% if form_errors(form.price) %}has-error{% endif %}">
            <label class="control-label">
                Prix (TTC)<star>*</star>
            </label>
            {{ form_row(form.price) }}
        </div>
        <div class="form-group {% if form_errors(form.animator) %}has-error{% endif %}">
            <label class="control-label">
                Animatrice/Animateur<star>*</star>
            </label>
            {{ form_row(form.animator) }}
        </div>
        <div class="category"><star>*</star> Champs obligatoires</div>
        <div class="card-footer">
            <a class="btn btn-danger btn-fill pull-right" href="{{ path('workshop_edit', {'slug': workshop.slug}) }}" style="margin-left: 1rem;">Annuler</a>
            <button class="btn btn-info btn-fill pull-right">{{ button_label|default('Enregistrer') }}</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
{{ form_end(form) }}
